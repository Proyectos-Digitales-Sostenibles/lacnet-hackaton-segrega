{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/../src/$1"
  },
  "reporters": [
    "default",
    [
      "jest-junit",
      {
        "outputDirectory": ".",
        "outputName": "test-report.xml"
      }
    ]
  ]
}
